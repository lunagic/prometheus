{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src/frontend/", "pkg/frontend/", ".storybook"],
		"ignore": ["src/frontend/go.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useValidAnchor": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noEmptyBlockStatements": "off",
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noConsole": "off"
			},
			"correctness": {
				"useImportExtensions": "off",
				"noUndeclaredVariables": "off",
				"noUndeclaredDependencies": "off"
			},
			"style": {
				"noNamespace": "off",
				"noDefaultExport": "off",
				"useNamingConvention": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}
